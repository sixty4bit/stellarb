<turbo-frame id="content_panel">
<div class="max-w-4xl px-4">
  <h2 class="text-2xl font-bold mb-4 text-orange-500">★ Bookmarks</h2>

  <% if @bookmarks.any? %>
    <div class="space-y-2">
      <% @bookmarks.each do |bookmark| %>
        <div class="bg-blue-900 border border-blue-700 p-3 rounded flex items-center justify-between">
          <div>
            <%= link_to bookmark.system.name, system_path(bookmark.system), class: "text-orange-400 hover:text-orange-300 font-mono", data: { turbo_frame: "content_panel" } %>
            <% if bookmark.label.present? %>
              <span class="text-gray-400 ml-2">— <%= bookmark.label %></span>
            <% end %>
            <span class="text-gray-500 text-xs ml-2">
              (<%= bookmark.system.x %>, <%= bookmark.system.y %>, <%= bookmark.system.z %>)
            </span>
          </div>
          <div class="flex items-center gap-2">
            <%= form_with url: bookmark_path(bookmark), method: :patch, class: "flex items-center gap-1" do |f| %>
              <%= f.text_field :label, value: bookmark.label, placeholder: "Label", class: "bg-blue-800 border border-blue-600 text-white px-2 py-1 text-xs font-mono rounded w-24" %>
              <%= f.submit "Save", class: "bg-blue-700 hover:bg-blue-600 text-white px-2 py-1 text-xs font-mono rounded cursor-pointer" %>
            <% end %>
            <%= link_to "✕", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Remove?" }, class: "text-red-400 hover:text-red-300 text-sm ml-2" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-blue-900 border border-blue-700 p-6 rounded text-center">
      <p class="text-gray-400 font-mono">No bookmarks yet. Visit systems and bookmark them!</p>
    </div>
  <% end %>
</div>
</turbo-frame>

<turbo-frame id="content_panel">
<div class="max-w-4xl px-4">
  <h2 class="text-2xl font-bold mb-4 text-orange-500">★ Bookmarks</h2>

  <% if @bookmarks.any? %>
    <div class="space-y-2">
      <% @bookmarks.each do |bookmark| %>
        <div class="bg-blue-900 border border-blue-700 p-3 rounded flex items-center justify-between">
          <div>
            <%= link_to bookmark.system.name, system_path(bookmark.system), class: "text-orange-400 hover:text-orange-300 font-mono", data: { turbo_frame: "content_panel" } %>
            <% if bookmark.label.present? %>
              <span class="text-gray-400 ml-2">— <%= bookmark.label %></span>
            <% end %>
            <span class="text-gray-500 text-xs ml-2">(<%= bookmark.system.x %>, <%= bookmark.system.y %>, <%= bookmark.system.z %>)</span>
          </div>
          <div class="flex items-center gap-2">
            <%= link_to "⚡ Warp", warp_route_bookmark_path(bookmark), class: "bg-orange-600 hover:bg-orange-500 text-white px-2 py-1 text-xs font-mono rounded", data: { turbo_frame: "content_panel" } %>
            <%= link_to "✕", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Remove?" }, class: "text-red-400 hover:text-red-300 text-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-400 font-mono text-center py-6">No bookmarks yet.</p>
  <% end %>
</div>
</turbo-frame>

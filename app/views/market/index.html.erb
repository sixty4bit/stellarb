<%= render 'shared/breadcrumbs', breadcrumbs: @breadcrumbs %>

<div class="max-w-6xl">
  <h1 class="text-2xl font-bold mb-1 text-orange-500">Market</h1>
  <div class="text-sm text-gray-400 mb-6"><%= @system.name %> Trading Post</div>

  <!-- Market Stats -->
  <div class="grid grid-cols-3 gap-4 mb-6">
    <div class="bg-blue-900 border border-blue-700 p-4">
      <div class="text-gray-400 text-sm">Your Credits</div>
      <div class="text-lime-400 text-2xl font-bold"><%= number_with_delimiter(current_user.credits.to_i) %> cr</div>
    </div>
    <div class="bg-blue-900 border border-blue-700 p-4">
      <div class="text-gray-400 text-sm">Commodities</div>
      <div class="text-white text-2xl font-bold"><%= @market_data.count %></div>
    </div>
    <div class="bg-blue-900 border border-blue-700 p-4">
      <div class="text-gray-400 text-sm">System Type</div>
      <div class="text-white text-2xl font-bold"><%= @system.properties&.dig("star_type")&.humanize || "Unknown" %></div>
    </div>
  </div>

  <!-- Commodity Table -->
  <div class="bg-blue-900 border border-blue-700 mb-6">
    <div class="grid grid-cols-6 gap-2 p-3 border-b border-blue-700 text-sm text-gray-400 font-bold">
      <div>Commodity</div>
      <div class="text-right">Buy</div>
      <div class="text-right">Sell</div>
      <div class="text-right">Spread</div>
      <div class="text-right">Stock</div>
      <div class="text-center">Trend</div>
    </div>
    
    <% @market_data.each do |item| %>
      <div class="grid grid-cols-6 gap-2 p-3 border-b border-blue-700 hover:bg-blue-800 transition-colors cursor-pointer">
        <div class="text-white font-bold"><%= item[:commodity].humanize %></div>
        <div class="text-right text-orange-400"><%= item[:buy_price] %> cr</div>
        <div class="text-right text-lime-400"><%= item[:sell_price] %> cr</div>
        <div class="text-right text-gray-400">
          <%= ((item[:buy_price] - item[:sell_price]).to_f / item[:buy_price] * 100).round(1) %>%
        </div>
        <div class="text-right text-white"><%= number_with_delimiter(item[:inventory]) %></div>
        <div class="text-center">
          <% case item[:trend] %>
          <% when :up %>
            <span class="text-lime-400">↑</span>
          <% when :down %>
            <span class="text-red-400">↓</span>
          <% else %>
            <span class="text-gray-400">→</span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Quick Actions -->
  <div class="flex gap-4">
    <%= link_to "#", class: "px-4 py-2 bg-orange-800 text-white hover:bg-orange-700 rounded transition-colors" do %>
      <span class="text-lime-400">b</span> Buy Commodity
    <% end %>
    <%= link_to "#", class: "px-4 py-2 bg-lime-800 text-white hover:bg-lime-700 rounded transition-colors" do %>
      <span class="text-lime-400">s</span> Sell Commodity
    <% end %>
    <%= link_to "#", class: "px-4 py-2 bg-blue-800 text-white hover:bg-orange-800 rounded transition-colors" do %>
      <span class="text-lime-400">c</span> Compare Markets
    <% end %>
  </div>

  <%= link_to system_path(@system), class: "block mt-6 text-sky-400 hover:text-sky-300", data: { turbo_frame: "content_panel" } do %>
    ← Back to <%= @system.name %>
  <% end %>

  <div class="mt-8 text-sm text-gray-500">
    <p>Keyboard: j/k to select commodity, b=buy, s=sell, c=compare, Esc=back</p>
  </div>
</div>

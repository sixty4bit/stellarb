<turbo-frame id="content_panel">
<%= render 'shared/breadcrumbs', breadcrumbs: @breadcrumbs %>

<div class="max-w-6xl">
  <h1 class="text-2xl font-bold mb-1 text-orange-500">Market</h1>
  <div class="text-sm text-gray-400 mb-2"><%= @system.name %> Trading Post</div>
  
  <!-- Trading Disabled Warning -->
  <% unless @trading_enabled %>
    <div class="trading-disabled mb-6 p-4 bg-red-900 border border-red-700 rounded">
      <div class="flex items-center gap-3">
        <span class="text-2xl">üö´</span>
        <div>
          <div class="text-red-400 font-bold">TRADING DISABLED</div>
          <div class="text-gray-400 text-sm">
            No operational marketplace in this system. Build a Civic Center to enable trading.
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Marketplace Info -->
  <% if @marketplace&.operational? %>
    <div class="mb-4 p-3 bg-cyan-900 border border-cyan-700 rounded">
      <div class="flex items-center gap-2">
        <span class="text-cyan-400">üè™</span>
        <span class="text-cyan-300">
          <strong class="text-white"><%= @marketplace.name %></strong> (Tier <%= @marketplace.tier %>)
          <span class="text-gray-400">‚Äî Trading fee: <span class="text-orange-400"><%= (@marketplace.marketplace_fee_rate * 100).round %>%</span></span>
        </span>
      </div>
    </div>
  <% end %>

  <!-- Price Staleness Indicator -->
  <% if @price_source == :live %>
    <div class="flex items-center gap-2 mb-6 text-sm">
      <span class="inline-flex items-center px-2 py-1 bg-lime-900 border border-lime-700 text-lime-400 rounded">
        <span class="w-2 h-2 bg-lime-400 rounded-full mr-2 animate-pulse"></span>
        LIVE PRICES
      </span>
      <span class="text-gray-500">You have a ship docked at this station</span>
    </div>
  <% else %>
    <div class="flex items-center gap-2 mb-6 text-sm">
      <span class="inline-flex items-center px-2 py-1 bg-yellow-900 border border-yellow-700 text-yellow-400 rounded">
        <span class="w-2 h-2 bg-yellow-400 rounded-full mr-2"></span>
        REMEMBERED PRICES
      </span>
      <span class="text-gray-500">Prices as of <%= @staleness_label %></span>
    </div>
  <% end %>

  <!-- System Ownership Banner -->
  <% if @system.owned? %>
    <div class="mb-4 p-3 bg-purple-900 border border-purple-700 rounded">
      <div class="flex items-center gap-2">
        <span class="text-purple-400">üëë</span>
        <span class="text-purple-300">
          <% if @system.owned_by?(current_user) %>
            <strong class="text-lime-400">You own this system!</strong>
            <span class="text-gray-400">Trade at base prices with no spread. You receive 10% of all trade taxes.</span>
          <% else %>
            System owned by <strong class="text-white"><%= @system.owner.name %></strong>
            <span class="text-gray-400">‚Äî 10% of spread goes to the owner as tax.</span>
          <% end %>
        </span>
      </div>
    </div>
  <% else %>
    <div class="mb-4 p-3 bg-gray-800 border border-gray-700 rounded">
      <div class="flex items-center gap-2">
        <span class="text-gray-500">üè¥</span>
        <span class="text-gray-400">
          <strong>Unclaimed system</strong> ‚Äî Build a Starbase Administration Hub to claim ownership.
        </span>
      </div>
    </div>
  <% end %>

  <!-- Market Stats -->
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-6">
    <div class="bg-blue-900 border border-blue-700 p-4">
      <div class="text-gray-400 text-sm">Your Credits</div>
      <div class="text-lime-400 text-2xl font-bold"><%= number_with_delimiter(current_user.credits.to_i) %> cr</div>
    </div>
    <div class="bg-blue-900 border border-blue-700 p-4">
      <div class="text-gray-400 text-sm">Commodities</div>
      <div class="text-white text-2xl font-bold"><%= @market_data.count %></div>
    </div>
    <div class="bg-blue-900 border border-blue-700 p-4">
      <div class="text-gray-400 text-sm">System Type</div>
      <div class="text-white text-2xl font-bold"><%= @system.properties&.dig("star_type")&.humanize || "Unknown" %></div>
    </div>
  </div>

  <!-- ===== DESKTOP: Commodity Table (md+) ===== -->
  <div class="market-desktop-grid hidden md:block bg-blue-900 border border-blue-700 mb-6">
    <div class="grid grid-cols-9 gap-2 p-3 border-b border-blue-700 text-sm text-gray-400 font-bold">
      <div>Mineral</div>
      <div>Tier</div>
      <div class="text-right">Buy Price</div>
      <div class="text-right">Sell Price</div>
      <div class="text-right">Stock</div>
      <div class="text-center">Trend</div>
      <div class="text-center">Qty</div>
      <div class="text-center" colspan="2">Actions</div>
    </div>
    
    <% @market_data.each do |item| %>
      <% breakdown = item[:breakdown] %>
      <details class="border-b border-blue-700">
        <summary class="grid grid-cols-9 gap-2 p-3 items-center hover:bg-blue-800 transition-colors cursor-pointer list-none">
          <div class="text-white font-bold"><%= item[:commodity] %></div>
          <div>
            <% tier_colors = { common: 'bg-gray-600', uncommon: 'bg-green-700', rare: 'bg-blue-600', exotic: 'bg-purple-600', futuristic: 'bg-orange-600' } %>
            <span class="tier-badge px-2 py-0.5 text-xs rounded <%= tier_colors[item[:tier]] || 'bg-gray-600' %>">
              <%= item[:tier]&.to_s&.capitalize || 'Unknown' %>
            </span>
          </div>
          <div class="text-right text-orange-400"><%= item[:buy_price] %> cr</div>
          <div class="text-right text-lime-400"><%= item[:sell_price] %> cr</div>
          <div class="text-right text-white"><%= number_with_delimiter(item[:inventory]) %></div>
          <div class="text-center">
            <% case item[:trend] %>
            <% when :up %>
              <span class="text-lime-400" title="Price trending up">‚Üë</span>
            <% when :down %>
              <span class="text-red-400" title="Price trending down">‚Üì</span>
            <% else %>
              <span class="text-gray-400" title="Price stable">‚Üí</span>
            <% end %>
          </div>
          
          <!-- Quantity Input -->
          <div class="text-center">
            <input type="number" 
                   id="qty_<%= item[:commodity] %>" 
                   value="1" 
                   min="1" 
                   max="<%= item[:inventory] %>"
                   class="w-16 bg-blue-950 border border-blue-600 text-white text-center rounded px-2 py-1 text-sm"
                   onclick="event.stopPropagation()">
          </div>
          
          <!-- Buy/Sell Buttons -->
          <div class="flex gap-2 col-span-2 justify-center" onclick="event.stopPropagation()">
            <%= form_with url: buy_system_market_index_path(@system), method: :post, class: "inline" do |f| %>
              <%= f.hidden_field :commodity, value: item[:commodity] %>
              <%= f.hidden_field :price, value: item[:buy_price] %>
              <input type="hidden" name="quantity" value="1" data-commodity="<%= item[:commodity] %>" class="qty-input">
              <%= f.submit "Buy", 
                  class: "px-3 py-1 bg-orange-700 hover:bg-orange-600 text-white text-sm rounded cursor-pointer transition-colors",
                  title: "Buy at #{item[:buy_price]} cr each" %>
            <% end %>
            
            <%= form_with url: sell_system_market_index_path(@system), method: :post, class: "inline" do |f| %>
              <%= f.hidden_field :commodity, value: item[:commodity] %>
              <%= f.hidden_field :price, value: item[:sell_price] %>
              <input type="hidden" name="quantity" value="1" data-commodity="<%= item[:commodity] %>" class="qty-input">
              <%= f.submit "Sell", 
                  class: "px-3 py-1 bg-lime-700 hover:bg-lime-600 text-white text-sm rounded cursor-pointer transition-colors",
                  title: "Sell at #{item[:sell_price]} cr each" %>
            <% end %>
          </div>
        </summary>
        
        <!-- Price Breakdown Panel -->
        <% if breakdown %>
        <div class="price-breakdown p-4 bg-blue-950 border-t border-blue-700">
          <h4 class="text-sm font-semibold text-gray-400 mb-3">üí∞ Price Breakdown for <%= item[:commodity].capitalize %></h4>
          
          <div class="grid grid-cols-2 gap-4 text-sm">
            <!-- Left column: Price calculation steps -->
            <div class="space-y-2">
              <div class="flex justify-between items-center">
                <span class="text-gray-400">Base Price:</span>
                <span class="base-price text-white font-mono"><%= breakdown[:base_price] %> cr</span>
              </div>
              
              <% if breakdown[:abundance_modifier] != 1.0 %>
                <div class="flex justify-between items-center">
                  <span class="text-gray-400">Abundance:</span>
                  <span class="abundance-modifier <%= breakdown[:abundance_modifier] < 1.0 ? 'text-lime-400' : 'text-red-400' %>">
                    <%= breakdown[:abundance_modifier] < 1.0 ? '-' : '+' %><%= ((1.0 - breakdown[:abundance_modifier]).abs * 100).round %>%
                    <span class="text-gray-500">(‚Üí <%= breakdown[:after_abundance] %> cr)</span>
                  </span>
                </div>
              <% else %>
                <div class="flex justify-between items-center">
                  <span class="text-gray-400">Abundance:</span>
                  <span class="abundance-modifier text-gray-500">Normal (¬±0%)</span>
                </div>
              <% end %>
              
              <% if breakdown[:building_effects].any? %>
                <% breakdown[:building_effects].each do |effect| %>
                  <div class="flex justify-between items-center">
                    <span class="text-gray-400 building-effect"><%= effect[:building_name] %>:</span>
                    <span class="building-effect <%= effect[:modifier] < 1.0 ? 'text-lime-400' : 'text-red-400' %>">
                      <%= effect[:modifier] < 1.0 ? '-' : '+' %><%= ((1.0 - effect[:modifier]).abs * 100).round %>%
                      <span class="text-gray-500">(‚Üí <%= effect[:price_after] %> cr)</span>
                    </span>
                  </div>
                <% end %>
              <% else %>
                <div class="flex justify-between items-center">
                  <span class="text-gray-400">Building Effects:</span>
                  <span class="text-gray-500">None</span>
                </div>
              <% end %>
              
              <% if breakdown[:delta] != 0 %>
                <div class="flex justify-between items-center">
                  <span class="text-gray-400">Market Activity:</span>
                  <span class="<%= breakdown[:delta] > 0 ? 'text-red-400' : 'text-lime-400' %>">
                    <%= breakdown[:delta] > 0 ? '+' : '' %><%= breakdown[:delta] %> cr
                  </span>
                </div>
              <% end %>
              
              <div class="border-t border-blue-700 pt-2 mt-2">
                <div class="flex justify-between items-center font-bold">
                  <span class="text-white">Final Price:</span>
                  <span class="final-price text-orange-400 font-mono"><%= breakdown[:final_price] %> cr</span>
                </div>
              </div>
            </div>
            
            <!-- Right column: Buy/Sell calculation -->
            <div class="space-y-2 border-l border-blue-700 pl-4">
              <div class="text-gray-400 text-xs mb-2">With Market Spread:</div>
              
              <div class="flex justify-between items-center">
                <span class="text-gray-400">You Buy At:</span>
                <span class="text-orange-400 font-mono">
                  <% if @system.owned_by?(current_user) %>
                    <%= breakdown[:final_price] %> cr <span class="text-xs text-lime-400">(owner)</span>
                  <% else %>
                    <%= item[:buy_price] %> cr <span class="text-xs text-gray-500">(+10%)</span>
                  <% end %>
                </span>
              </div>
              
              <div class="flex justify-between items-center">
                <span class="text-gray-400">You Sell At:</span>
                <span class="text-lime-400 font-mono">
                  <% if @system.owned_by?(current_user) %>
                    <%= breakdown[:final_price] %> cr <span class="text-xs text-lime-400">(owner)</span>
                  <% else %>
                    <%= item[:sell_price] %> cr <span class="text-xs text-gray-500">(-10%)</span>
                  <% end %>
                </span>
              </div>
              
              <% if @marketplace&.operational? %>
                <div class="flex justify-between items-center text-xs">
                  <span class="text-gray-500">Marketplace Fee:</span>
                  <span class="text-gray-400">+<%= (@marketplace.marketplace_fee_rate * 100).round %>% on trades</span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
      </details>
    <% end %>
  </div>

  <!-- ===== MOBILE: Card Layout (<md) ===== -->
  <div class="market-mobile-cards md:hidden space-y-3 mb-6">
    <% @market_data.each do |item| %>
      <% breakdown = item[:breakdown] %>
      <details class="bg-blue-900 border border-blue-700 rounded">
        <summary class="p-4 cursor-pointer list-none hover:bg-blue-800 transition-colors">
          <!-- Card header: name + tier + trend -->
          <div class="flex items-center justify-between mb-2">
            <div class="flex items-center gap-2">
              <span class="text-white font-bold text-lg"><%= item[:commodity] %></span>
              <% tier_colors = { common: 'bg-gray-600', uncommon: 'bg-green-700', rare: 'bg-blue-600', exotic: 'bg-purple-600', futuristic: 'bg-orange-600' } %>
              <span class="tier-badge px-2 py-0.5 text-xs rounded <%= tier_colors[item[:tier]] || 'bg-gray-600' %>">
                <%= item[:tier]&.to_s&.capitalize || 'Unknown' %>
              </span>
            </div>
            <div>
              <% case item[:trend] %>
              <% when :up %>
                <span class="text-lime-400 text-lg" title="Price trending up">‚Üë</span>
              <% when :down %>
                <span class="text-red-400 text-lg" title="Price trending down">‚Üì</span>
              <% else %>
                <span class="text-gray-400 text-lg" title="Price stable">‚Üí</span>
              <% end %>
            </div>
          </div>

          <!-- Prices row -->
          <div class="grid grid-cols-3 gap-2 text-sm mb-3">
            <div>
              <div class="text-gray-400 text-xs">Buy</div>
              <div class="text-orange-400 font-bold"><%= item[:buy_price] %> cr</div>
            </div>
            <div>
              <div class="text-gray-400 text-xs">Sell</div>
              <div class="text-lime-400 font-bold"><%= item[:sell_price] %> cr</div>
            </div>
            <div>
              <div class="text-gray-400 text-xs">Stock</div>
              <div class="text-white font-bold"><%= number_with_delimiter(item[:inventory]) %></div>
            </div>
          </div>

          <!-- Qty + Actions -->
          <div class="flex items-center gap-2" onclick="event.stopPropagation()">
            <input type="number"
                   id="mobile_qty_<%= item[:commodity] %>"
                   value="1" min="1" max="<%= item[:inventory] %>"
                   class="w-16 bg-blue-950 border border-blue-600 text-white text-center rounded px-2 py-1 text-sm">
            <%= form_with url: buy_system_market_index_path(@system), method: :post, class: "inline" do |f| %>
              <%= f.hidden_field :commodity, value: item[:commodity] %>
              <%= f.hidden_field :price, value: item[:buy_price] %>
              <input type="hidden" name="quantity" value="1" data-commodity="<%= item[:commodity] %>" class="mobile-qty-input">
              <%= f.submit "Buy",
                  class: "px-4 py-1.5 bg-orange-700 hover:bg-orange-600 text-white text-sm rounded cursor-pointer transition-colors font-bold" %>
            <% end %>
            <%= form_with url: sell_system_market_index_path(@system), method: :post, class: "inline" do |f| %>
              <%= f.hidden_field :commodity, value: item[:commodity] %>
              <%= f.hidden_field :price, value: item[:sell_price] %>
              <input type="hidden" name="quantity" value="1" data-commodity="<%= item[:commodity] %>" class="mobile-qty-input">
              <%= f.submit "Sell",
                  class: "px-4 py-1.5 bg-lime-700 hover:bg-lime-600 text-white text-sm rounded cursor-pointer transition-colors font-bold" %>
            <% end %>
          </div>
        </summary>

        <!-- Expanded: Price Breakdown -->
        <% if breakdown %>
        <div class="price-breakdown p-4 bg-blue-950 border-t border-blue-700 text-sm space-y-2">
          <h4 class="text-sm font-semibold text-gray-400 mb-2">üí∞ Price Breakdown</h4>

          <div class="flex justify-between">
            <span class="text-gray-400">Base Price:</span>
            <span class="base-price text-white font-mono"><%= breakdown[:base_price] %> cr</span>
          </div>

          <% if breakdown[:abundance_modifier] != 1.0 %>
            <div class="flex justify-between">
              <span class="text-gray-400">Abundance:</span>
              <span class="abundance-modifier <%= breakdown[:abundance_modifier] < 1.0 ? 'text-lime-400' : 'text-red-400' %>">
                <%= breakdown[:abundance_modifier] < 1.0 ? '-' : '+' %><%= ((1.0 - breakdown[:abundance_modifier]).abs * 100).round %>%
                <span class="text-gray-500">(‚Üí <%= breakdown[:after_abundance] %> cr)</span>
              </span>
            </div>
          <% end %>

          <% if breakdown[:building_effects].any? %>
            <% breakdown[:building_effects].each do |effect| %>
              <div class="flex justify-between">
                <span class="text-gray-400 building-effect"><%= effect[:building_name] %>:</span>
                <span class="building-effect <%= effect[:modifier] < 1.0 ? 'text-lime-400' : 'text-red-400' %>">
                  <%= effect[:modifier] < 1.0 ? '-' : '+' %><%= ((1.0 - effect[:modifier]).abs * 100).round %>%
                </span>
              </div>
            <% end %>
          <% end %>

          <% if breakdown[:delta] != 0 %>
            <div class="flex justify-between">
              <span class="text-gray-400">Market Activity:</span>
              <span class="<%= breakdown[:delta] > 0 ? 'text-red-400' : 'text-lime-400' %>">
                <%= breakdown[:delta] > 0 ? '+' : '' %><%= breakdown[:delta] %> cr
              </span>
            </div>
          <% end %>

          <div class="border-t border-blue-700 pt-2 mt-2 flex justify-between font-bold">
            <span class="text-white">Final Price:</span>
            <span class="final-price text-orange-400 font-mono"><%= breakdown[:final_price] %> cr</span>
          </div>

          <div class="border-t border-blue-700 pt-2 mt-2 space-y-1">
            <div class="flex justify-between">
              <span class="text-gray-400">You Buy At:</span>
              <span class="text-orange-400 font-mono">
                <% if @system.owned_by?(current_user) %>
                  <%= breakdown[:final_price] %> cr <span class="text-xs text-lime-400">(owner)</span>
                <% else %>
                  <%= item[:buy_price] %> cr <span class="text-xs text-gray-500">(+10%)</span>
                <% end %>
              </span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-400">You Sell At:</span>
              <span class="text-lime-400 font-mono">
                <% if @system.owned_by?(current_user) %>
                  <%= breakdown[:final_price] %> cr <span class="text-xs text-lime-400">(owner)</span>
                <% else %>
                  <%= item[:sell_price] %> cr <span class="text-xs text-gray-500">(-10%)</span>
                <% end %>
              </span>
            </div>
          </div>
        </div>
        <% end %>
      </details>
    <% end %>
  </div>

  <!-- Price Legend -->
  <div class="bg-blue-900 border border-blue-700 p-4 mb-6">
    <h3 class="text-sm font-semibold text-gray-400 mb-2">Market Guide</h3>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-sm">
      <div>
        <span class="text-lime-400">‚Üë</span> <span class="text-gray-400">Price rising - good time to sell</span>
      </div>
      <div>
        <span class="text-red-400">‚Üì</span> <span class="text-gray-400">Price falling - good time to buy</span>
      </div>
      <div>
        <span class="text-gray-400">‚Üí</span> <span class="text-gray-400">Price stable</span>
      </div>
    </div>
    <p class="text-xs text-gray-500 mt-3">
      Buy prices are what you pay. Sell prices are what you receive. The spread is the market's cut.
    </p>
  </div>

  <!-- Spacer for sticky action bar -->
  <div class="pb-20"></div>
</div>

<!-- Sticky Action Bar -->
<div class="fixed bottom-0 left-0 right-0 z-50 bg-blue-950 border-t border-blue-700 px-4 py-3">
  <div class="max-w-6xl mx-auto flex flex-wrap gap-4 items-center">
    <%= link_to system_path(@system), class: "px-4 py-2 bg-blue-800 hover:bg-blue-700 border border-blue-600 text-white transition-colors", data: { turbo_frame: "content_panel" } do %>
      ‚Üê Back to <%= @system.name %>
    <% end %>
    <span class="text-sm text-gray-500">Keyboard: j/k to navigate, b=buy, s=sell, Esc=back</span>
  </div>
</div>

<script>
  // Sync quantity inputs with hidden form fields (desktop)
  document.querySelectorAll('input[id^="qty_"]').forEach(input => {
    input.addEventListener('change', function() {
      const commodity = this.id.replace('qty_', '');
      document.querySelectorAll(`input.qty-input[data-commodity="${commodity}"]`).forEach(hidden => {
        hidden.value = this.value;
      });
    });
  });
  // Sync quantity inputs with hidden form fields (mobile)
  document.querySelectorAll('input[id^="mobile_qty_"]').forEach(input => {
    input.addEventListener('change', function() {
      const commodity = this.id.replace('mobile_qty_', '');
      document.querySelectorAll(`input.mobile-qty-input[data-commodity="${commodity}"]`).forEach(hidden => {
        hidden.value = this.value;
      });
    });
  });
</script>
</turbo-frame>

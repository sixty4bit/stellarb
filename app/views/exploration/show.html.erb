<turbo-frame id="content_panel">
<%= render 'shared/breadcrumbs' %>

<div class="max-w-6xl px-4">
  <h2 class="text-2xl font-bold mb-4 text-orange-500">ðŸ”­ Exploration</h2>

  <section class="bg-blue-900 border border-blue-700 rounded p-3 sm:p-6 mb-6">
    <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
      <div class="text-center">
        <span class="text-4xl font-bold text-orange-400"><%= @explored_count %></span>
        <p class="text-gray-300 mt-1">Systems Explored</p>
      </div>
      <% if @current_position %>
        <div class="text-right">
          <p class="text-gray-400 text-sm">Current Position</p>
          <p class="text-gray-300 font-mono">
            (<%= @current_position[:x] %>, <%= @current_position[:y] %>, <%= @current_position[:z] %>)
          </p>
          <% if @ship %>
            <p class="text-gray-500 text-xs mt-1">Ship: <%= @ship.name %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>

  <% if notice.present? %>
    <div class="bg-green-900 border border-green-700 rounded p-4 mb-6 text-green-300">
      <%= notice %>
    </div>
  <% end %>

  <% if alert.present? %>
    <div class="bg-red-900 border border-red-700 rounded p-4 mb-6 text-red-300">
      <%= alert %>
    </div>
  <% end %>

  <% unless @ship %>
    <div class="bg-red-900 border border-red-700 rounded p-3 sm:p-6 mb-6">
      <p class="text-red-300">No operational ship available for exploration.</p>
      <p class="text-gray-400 text-sm mt-2">
        You need a ship to explore the galaxy.
        <%= link_to "View your ships", ships_path, class: "text-blue-400 hover:underline" %>
      </p>
    </div>
  <% end %>

  <h3 class="text-xl font-semibold mb-4 text-gray-200">Exploration Modes</h3>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="bg-gray-800 border border-gray-700 rounded p-4">
      <h4 class="text-lg font-bold text-orange-400 mb-2">Single Direction</h4>
      <p class="text-gray-400 text-sm mb-4">Explore in one direction from your current position. Simple and straightforward path through space.</p>
      
      <div class="grid grid-cols-3 gap-2 mb-2">
        <div></div>
        <%= button_to "+Y", single_direction_exploration_path(direction: "+y"),
            class: "px-2 py-1 bg-green-700 hover:bg-green-600 text-white rounded font-mono text-center text-xs",
            disabled: !@ship %>
        <div></div>

        <%= button_to "-X", single_direction_exploration_path(direction: "-x"),
            class: "px-2 py-1 bg-blue-700 hover:bg-blue-600 text-white rounded font-mono text-center text-xs",
            disabled: !@ship %>
        <div class="flex flex-col gap-1">
          <%= button_to "+Z", single_direction_exploration_path(direction: "+z"),
              class: "px-2 py-1 bg-purple-700 hover:bg-purple-600 text-white rounded font-mono text-center text-xs",
              disabled: !@ship %>
          <%= button_to "-Z", single_direction_exploration_path(direction: "-z"),
              class: "px-2 py-1 bg-purple-700 hover:bg-purple-600 text-white rounded font-mono text-center text-xs",
              disabled: !@ship %>
        </div>
        <%= button_to "+X", single_direction_exploration_path(direction: "+x"),
            class: "px-2 py-1 bg-blue-700 hover:bg-blue-600 text-white rounded font-mono text-center text-xs",
            disabled: !@ship %>

        <div></div>
        <%= button_to "-Y", single_direction_exploration_path(direction: "-y"),
            class: "px-2 py-1 bg-green-700 hover:bg-green-600 text-white rounded font-mono text-center text-xs",
            disabled: !@ship %>
        <div></div>
      </div>
    </div>

    <div class="bg-gray-800 border border-gray-700 rounded p-4">
      <h4 class="text-lg font-bold text-orange-400 mb-2">Growing Arcs</h4>
      <p class="text-gray-400 text-sm mb-4">Explore in expanding arcs from your position. Covers more area with each sweep.</p>
      <%= button_to "Explore", growing_arcs_exploration_path, class: "w-full bg-orange-600 hover:bg-orange-500 text-white font-bold py-2 px-4 rounded", disabled: !@ship %>
    </div>

    <div class="bg-gray-800 border border-gray-700 rounded p-4">
      <h4 class="text-lg font-bold text-orange-400 mb-2">Orbit</h4>
      <p class="text-gray-400 text-sm mb-4">Explore in an orbital pattern around a point. Systematic coverage of a region.</p>
      <%= button_to "Explore", orbit_exploration_path, class: "w-full bg-orange-600 hover:bg-orange-500 text-white font-bold py-2 px-4 rounded", disabled: !@ship %>
    </div>
  </div>
</div>
</turbo-frame>

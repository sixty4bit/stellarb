<turbo-frame id="content_panel">
<%= render 'shared/breadcrumbs' %>

<div class="max-w-6xl px-4">
  <h2 class="text-2xl font-bold mb-4 text-orange-500">ðŸ”­ Exploration</h2>

  <section class="bg-blue-900 border border-blue-700 rounded p-3 sm:p-6 mb-6">
    <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
      <div class="text-center">
        <span class="text-4xl font-bold text-orange-400"><%= @explored_count %></span>
        <p class="text-gray-300 mt-1">Systems Explored</p>
      </div>
      <% if @ship %>
        <div class="text-right">
          <p class="text-gray-400 text-sm">Ship Position</p>
          <p class="text-gray-300 font-mono">
            (<%= @ship.location_x %>, <%= @ship.location_y %>, <%= @ship.location_z %>)
          </p>
          <p class="text-gray-500 text-xs mt-1">
            Ship: <%= @ship.name %> Â· Fuel: <%= @ship.fuel.round(1) %>/<%= @ship.fuel_capacity %>
          </p>
        </div>
      <% end %>
    </div>
  </section>

  <% if notice.present? %>
    <div class="bg-green-900 border border-green-700 rounded p-4 mb-6 text-green-300"><%= notice %></div>
  <% end %>
  <% if alert.present? %>
    <div class="bg-red-900 border border-red-700 rounded p-4 mb-6 text-red-300"><%= alert %></div>
  <% end %>

  <% unless @ship %>
    <div class="bg-red-900 border border-red-700 rounded p-3 sm:p-6 mb-6">
      <p class="text-red-300">No operational ship available for exploration.</p>
      <p class="text-gray-400 text-sm mt-2">
        <%= link_to "View your ships", ships_path, class: "text-blue-400 hover:underline" %>
      </p>
    </div>
  <% end %>

  <% if @ship&.status == "in_transit" %>
    <!-- In-Transit State -->
    <div class="bg-yellow-900 border border-yellow-700 rounded p-6 mb-6">
      <h3 class="text-lg font-bold text-yellow-400 mb-2">ðŸš€ Ship In Transit</h3>
      <% if @ship.destination_x.present? %>
        <p class="text-gray-300 font-mono">
          Traveling to (<%= @ship.destination_x %>, <%= @ship.destination_y %>, <%= @ship.destination_z %>)
        </p>
      <% elsif @ship.destination_system %>
        <p class="text-gray-300">Heading to <%= @ship.destination_system.name %></p>
      <% end %>
      <% if @ship.arrival_at %>
        <p class="text-gray-400 text-sm mt-2">
          ETA: <%= distance_of_time_in_words_to_now(@ship.arrival_at) %>
        </p>
      <% end %>
      <p class="text-yellow-300 text-sm mt-3">Direction buttons disabled while traveling.</p>
    </div>
  <% end %>

  <h3 class="text-xl font-semibold mb-4 text-gray-200">Exploration Modes</h3>

  <% disabled = !@ship || @ship.status == "in_transit" %>
  <% btn_class = disabled ? "bg-gray-700 text-gray-500 cursor-not-allowed" : "" %>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="bg-gray-800 border border-gray-700 rounded p-4">
      <h4 class="text-lg font-bold text-orange-400 mb-2">Single Direction</h4>
      <p class="text-gray-400 text-sm mb-4">Explore axis-aligned from current position. Ship travels to the nearest unexplored coordinate.</p>

      <% if @ship && @ship.fuel > 0 %>
        <p class="text-gray-500 text-xs mb-2">â‰ˆ <%= (@ship.fuel_efficiency * 1).round(1) %> fuel per unit distance</p>
      <% end %>
      
      <div class="grid grid-cols-3 gap-2 mb-2">
        <div></div>
        <%= button_to "+Y â†‘", single_direction_exploration_path(direction: "+y"),
            class: "px-2 py-1 #{disabled ? 'bg-gray-700 text-gray-500' : 'bg-green-700 hover:bg-green-600 text-white'} rounded font-mono text-center text-xs",
            disabled: disabled %>
        <div></div>

        <%= button_to "â† -X", single_direction_exploration_path(direction: "-x"),
            class: "px-2 py-1 #{disabled ? 'bg-gray-700 text-gray-500' : 'bg-blue-700 hover:bg-blue-600 text-white'} rounded font-mono text-center text-xs",
            disabled: disabled %>
        <div class="flex flex-col gap-1">
          <%= button_to "+Z â¬†", single_direction_exploration_path(direction: "+z"),
              class: "px-2 py-1 #{disabled ? 'bg-gray-700 text-gray-500' : 'bg-purple-700 hover:bg-purple-600 text-white'} rounded font-mono text-center text-xs",
              disabled: disabled %>
          <%= button_to "-Z â¬‡", single_direction_exploration_path(direction: "-z"),
              class: "px-2 py-1 #{disabled ? 'bg-gray-700 text-gray-500' : 'bg-purple-700 hover:bg-purple-600 text-white'} rounded font-mono text-center text-xs",
              disabled: disabled %>
        </div>
        <%= button_to "+X â†’", single_direction_exploration_path(direction: "+x"),
            class: "px-2 py-1 #{disabled ? 'bg-gray-700 text-gray-500' : 'bg-blue-700 hover:bg-blue-600 text-white'} rounded font-mono text-center text-xs",
            disabled: disabled %>

        <div></div>
        <%= button_to "-Y â†“", single_direction_exploration_path(direction: "-y"),
            class: "px-2 py-1 #{disabled ? 'bg-gray-700 text-gray-500' : 'bg-green-700 hover:bg-green-600 text-white'} rounded font-mono text-center text-xs",
            disabled: disabled %>
        <div></div>
      </div>
    </div>

    <div class="bg-gray-800 border border-gray-700 rounded p-4">
      <h4 class="text-lg font-bold text-orange-400 mb-2">Growing Arcs</h4>
      <p class="text-gray-400 text-sm mb-4">Explore in expanding arcs. Ship travels to nearest unexplored coordinate.</p>
      <%= button_to "Explore", growing_arcs_exploration_path,
          class: "w-full #{disabled ? 'bg-gray-700 text-gray-500' : 'bg-orange-600 hover:bg-orange-500 text-white'} font-bold py-2 px-4 rounded",
          disabled: disabled %>
    </div>

    <div class="bg-gray-800 border border-gray-700 rounded p-4">
      <h4 class="text-lg font-bold text-orange-400 mb-2">Orbit</h4>
      <p class="text-gray-400 text-sm mb-4">Explore in orbital pattern around a point.</p>
      <%= button_to "Explore", orbit_exploration_path,
          class: "w-full #{disabled ? 'bg-gray-700 text-gray-500' : 'bg-orange-600 hover:bg-orange-500 text-white'} font-bold py-2 px-4 rounded",
          disabled: disabled %>
    </div>
  </div>
</div>
</turbo-frame>

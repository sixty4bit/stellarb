<turbo-frame id="content_panel">
<%= render 'shared/breadcrumbs' %>

<div class="max-w-6xl">
  <h2 class="text-2xl font-bold mb-4 text-orange-500">ðŸ”­ Exploration</h2>

  <section class="bg-blue-900 border border-blue-700 rounded p-6 mb-6">
    <div class="text-center">
      <span class="text-4xl font-bold text-orange-400"><%= @explored_count %></span>
      <p class="text-gray-300 mt-1">Systems Explored</p>
    </div>
  </section>

  <% if notice.present? %>
    <div class="bg-green-900 border border-green-700 rounded p-4 mb-6 text-green-300">
      <%= notice %>
    </div>
  <% end %>

  <h3 class="text-xl font-semibold mb-4 text-gray-200">Exploration Modes</h3>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="bg-gray-800 border border-gray-700 rounded p-4">
      <h4 class="text-lg font-bold text-orange-400 mb-2">Single Direction</h4>
      <p class="text-gray-400 text-sm mb-4">Explore in one direction from your current position. Simple and straightforward path through space.</p>
      <%= button_to "Explore", single_direction_exploration_path, class: "w-full bg-orange-600 hover:bg-orange-500 text-white font-bold py-2 px-4 rounded" %>
    </div>

    <div class="bg-gray-800 border border-gray-700 rounded p-4">
      <h4 class="text-lg font-bold text-orange-400 mb-2">Growing Arcs</h4>
      <p class="text-gray-400 text-sm mb-4">Explore in expanding arcs from your position. Covers more area with each sweep.</p>
      <%= button_to "Explore", growing_arcs_exploration_path, class: "w-full bg-orange-600 hover:bg-orange-500 text-white font-bold py-2 px-4 rounded" %>
    </div>

    <div class="bg-gray-800 border border-gray-700 rounded p-4">
      <h4 class="text-lg font-bold text-orange-400 mb-2">Orbit</h4>
      <p class="text-gray-400 text-sm mb-4">Explore in an orbital pattern around a point. Systematic coverage of a region.</p>
      <%= button_to "Explore", orbit_exploration_path, class: "w-full bg-orange-600 hover:bg-orange-500 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>
</turbo-frame>

<turbo-frame id="content_panel">
<%= render 'shared/breadcrumbs', breadcrumbs: @breadcrumbs %>

<div class="max-w-2xl">
  <h1 class="text-2xl font-bold text-orange-500 mb-2">Construct New Building</h1>
  
  <% if @current_system %>
    <p class="text-gray-400 mb-4">Location: <span class="text-white"><%= @current_system.name %></span></p>
  <% end %>
  
  <div class="bg-blue-900 border border-blue-700 p-4 mb-6">
    <span class="text-gray-400">Your Credits:</span>
    <span class="text-lime-400 font-bold ml-2"><%= number_with_delimiter(@user_credits.to_i) %></span>
  </div>

  <%= form_with model: @building, class: "space-y-6", data: { turbo_frame: "content_panel" } do |f| %>
    <% if @building.errors.any? %>
      <div class="bg-red-900 border border-red-600 p-4">
        <h2 class="text-red-400 font-bold mb-2"><%= pluralize(@building.errors.count, "error") %> prevented construction:</h2>
        <ul class="list-disc list-inside text-sm">
          <% @building.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name, class: "block text-sm text-gray-400 mb-1" %>
      <%= f.text_field :name,
          class: "w-full bg-blue-950 border border-blue-700 px-4 py-2 focus:border-orange-500 focus:outline-none",
          placeholder: "Building name" %>
    </div>

    <div>
      <%= f.label :system_id, "Location", class: "block text-sm text-gray-400 mb-1" %>
      <%= f.collection_select :system_id,
          current_user.visited_systems,
          :id, :name,
          { prompt: "Select a system", selected: @current_system&.id },
          class: "w-full bg-blue-950 border border-blue-700 px-4 py-2 focus:border-orange-500 focus:outline-none" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :race, class: "block text-sm text-gray-400 mb-1" %>
        <%= f.select :race,
            Building::RACES.map { |r| [r.humanize, r] },
            { prompt: "Select race" },
            class: "w-full bg-blue-950 border border-blue-700 px-4 py-2 focus:border-orange-500 focus:outline-none" %>
      </div>

      <div>
        <%= f.label :function, class: "block text-sm text-gray-400 mb-1" %>
        <%= f.select :function,
            Building::FUNCTIONS.map { |fn| [fn.humanize, fn] },
            { prompt: "Select function" },
            class: "w-full bg-blue-950 border border-blue-700 px-4 py-2 focus:border-orange-500 focus:outline-none" %>
      </div>
    </div>

    <div>
      <%= f.label :tier, class: "block text-sm text-gray-400 mb-1" %>
      <%= f.select :tier,
          (1..5).map { |t| ["Tier #{t}", t] },
          { prompt: "Select tier" },
          class: "w-full bg-blue-950 border border-blue-700 px-4 py-2 focus:border-orange-500 focus:outline-none" %>
    </div>

    <!-- Building Cost Reference -->
    <div class="bg-blue-950 border border-blue-800 p-4">
      <h3 class="text-sm font-bold text-gray-300 mb-3">Building Costs by Function (Tier 1)</h3>
      <div class="grid grid-cols-1 gap-2 text-sm">
        <% Building::FUNCTIONS.each do |function| %>
          <div class="flex justify-between items-center">
            <span class="text-gray-400"><%= Building::FUNCTION_NAMES[function] %></span>
            <span class="text-lime-400"><%= number_with_delimiter(Building::BUILDING_COSTS[function][1]) %> credits</span>
          </div>
        <% end %>
      </div>
      <p class="text-xs text-gray-500 mt-3">* Higher tiers cost more. Prices vary by race (Myrmidon -10%, Solari +10%, Krog +15%)</p>
    </div>

    <div class="flex gap-4">
      <%= f.submit "Begin Construction",
          class: "px-6 py-2 bg-orange-800 hover:bg-orange-700 border border-orange-600 transition-colors cursor-pointer" %>
      
      <%= link_to buildings_path,
          class: "px-6 py-2 bg-blue-800 hover:bg-blue-700 border border-blue-600 transition-colors",
          data: { turbo_frame: "content_panel" } do %>
        Cancel
      <% end %>
    </div>
  <% end %>
</div>
</turbo-frame>

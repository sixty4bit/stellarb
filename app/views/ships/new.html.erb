<turbo-frame id="content_panel">
<%= render 'shared/breadcrumbs', breadcrumbs: @breadcrumbs %>

<div class="max-w-2xl">
  <h1 class="text-2xl font-bold text-orange-500 mb-2">Purchase Ship</h1>
  
  <% if @current_system %>
    <p class="text-gray-400 mb-4">Location: <span class="text-white"><%= @current_system.name %></span></p>
  <% end %>
  
  <div class="bg-blue-900 border border-blue-700 p-4 mb-6">
    <span class="text-gray-400">Your Credits:</span>
    <span class="text-lime-400 font-bold ml-2"><%= number_with_delimiter(@user_credits.to_i) %></span>
  </div>

  <%= form_with model: @ship, class: "space-y-6", data: { turbo_frame: "content_panel" } do |f| %>
    <% if @ship.errors.any? %>
      <div class="bg-red-900 border border-red-600 p-4">
        <h2 class="text-red-400 font-bold mb-2"><%= pluralize(@ship.errors.count, "error") %> prevented purchase:</h2>
        <ul class="list-disc list-inside text-sm">
          <% @ship.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= hidden_field_tag :system_id, @current_system&.id %>

    <div>
      <%= f.label :name, class: "block text-sm text-gray-400 mb-1" %>
      <%= f.text_field :name,
          class: "w-full bg-blue-950 border border-blue-700 px-4 py-3 sm:py-2 text-base focus:border-orange-500 focus:outline-none min-h-[44px]",
          placeholder: "Name your ship" %>
    </div>

    <div>
      <%= f.label :race, class: "block text-sm text-gray-400 mb-1" %>
      <%= f.select :race,
          Ship::RACES.map { |r| [r.humanize, r] },
          { prompt: "Select race" },
          class: "w-full bg-blue-950 border border-blue-700 px-4 py-3 sm:py-2 text-base focus:border-orange-500 focus:outline-none min-h-[44px]" %>
    </div>

    <!-- Race Descriptions -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
      <div data-testid="race-vex" class="bg-blue-950 border border-blue-800 p-3">
        <h4 class="text-white font-bold text-sm">Vex</h4>
        <p class="text-gray-400 text-xs mt-1">Versatile and balanced. The everyman's choice.</p>
      </div>
      <div data-testid="race-solari" class="bg-blue-950 border border-blue-800 p-3">
        <h4 class="text-white font-bold text-sm">Solari</h4>
        <p class="text-gray-400 text-xs mt-1">Advanced sensor arrays. See everything, miss nothing.</p>
      </div>
      <div data-testid="race-krog" class="bg-blue-950 border border-blue-800 p-3">
        <h4 class="text-white font-bold text-sm">Krog</h4>
        <p class="text-gray-400 text-xs mt-1">Built like a tank. Reinforced hulls for the reckless.</p>
      </div>
      <div data-testid="race-myrmidon" class="bg-blue-950 border border-blue-800 p-3">
        <h4 class="text-white font-bold text-sm">Myrmidon</h4>
        <p class="text-gray-400 text-xs mt-1">Efficient manufacturing. More ship for less credits.</p>
      </div>
      <div data-testid="race-grelmak" class="bg-blue-950 border border-orange-700 p-3">
        <h4 class="text-white font-bold text-sm">Grelmak</h4>
        <p class="text-gray-400 text-xs mt-1">Scrapyard genius. Better at everything... when it works.</p>
        <p class="text-orange-400 text-xs mt-1 font-bold">‚ö° Chaos Factor: 15% chance of random mishaps</p>
      </div>
      <div data-testid="race-mechari" class="bg-blue-950 border border-blue-800 p-3">
        <h4 class="text-white font-bold text-sm">Mechari <span class="text-sky-400 text-xs font-normal ml-1">Ultra-efficient ü§ñ</span></h4>
        <p class="text-gray-400 text-xs mt-1">Precision robotics. Ultra-efficient but limited crew capacity.</p>
        <p class="text-yellow-400 text-xs mt-1">‚ö†Ô∏è Reduced crew slots compared to other races</p>
      </div>
    </div>

    <div>
      <%= f.label :hull_size, "Hull Size", class: "block text-sm text-gray-400 mb-1" %>
      <%= f.select :hull_size,
          Ship::HULL_SIZES.map { |h| ["#{Ship::SHIP_TYPE_NAMES[h]} (#{number_with_delimiter(Ship::SHIP_COSTS[h][:base_credits])} cr)", h] },
          { prompt: "Select hull size" },
          class: "w-full bg-blue-950 border border-blue-700 px-4 py-3 sm:py-2 text-base focus:border-orange-500 focus:outline-none min-h-[44px]" %>
    </div>

    <!-- Tutorial Recommendation: Show for new players with no ships -->
    <% if current_user&.ships&.reload&.empty? %>
      <div class="bg-lime-900/30 border border-lime-700 p-4" data-testid="tutorial-recommendation">
        <h3 class="text-sm font-bold text-lime-400 mb-2">üí° Recommended for New Traders</h3>
        <p class="text-sm text-gray-300 mb-2">
          For your first ship, we recommend the <strong class="text-lime-300">Myrmidon Scout</strong>:
        </p>
        <ul class="text-sm text-gray-400 list-disc list-inside space-y-1">
          <li><strong class="text-lime-300">Cheapest option</strong> ‚Äî Myrmidon ships cost 10% less</li>
          <li><strong class="text-lime-300">Perfect for learning</strong> ‚Äî Scout class is nimble and fuel-efficient</li>
          <li><strong class="text-lime-300">Low crew requirement</strong> ‚Äî Just 1-2 crew needed to operate</li>
        </ul>
        <p class="text-xs text-gray-500 mt-3">
          Cost: <span class="text-lime-400"><%= number_with_delimiter(Ship.cost_for(hull_size: "scout", race: "myrmidon")) %> credits</span>
          (cheapest ship in the fleet!)
        </p>
      </div>
    <% end %>

    <!-- Ship Type Reference -->
    <div class="bg-blue-950 border border-blue-800 p-4">
      <h3 class="text-sm font-bold text-gray-300 mb-3">Ship Types & Costs</h3>
      <div class="grid grid-cols-1 gap-2 text-sm">
        <% Ship::HULL_SIZES.each do |hull_size| %>
          <div class="flex justify-between items-center">
            <span class="text-gray-400"><%= Ship::SHIP_TYPE_NAMES[hull_size] %></span>
            <span class="text-lime-400"><%= number_with_delimiter(Ship::SHIP_COSTS[hull_size][:base_credits]) %> credits</span>
          </div>
        <% end %>
      </div>
      <p class="text-xs text-gray-500 mt-3">* Prices may vary by race (Myrmidon -10%, Solari +10%, Krog +15%)</p>
    </div>

    <div class="flex flex-col sm:flex-row gap-3">
      <%= f.submit "Purchase Ship",
          class: "min-h-[44px] px-6 py-3 sm:py-2 bg-orange-800 hover:bg-orange-700 border border-orange-600 transition-colors cursor-pointer text-center" %>
      
      <%= link_to ships_path,
          class: "min-h-[44px] px-6 py-3 sm:py-2 bg-blue-800 hover:bg-blue-700 border border-blue-600 transition-colors text-center flex items-center justify-center",
          data: { turbo_frame: "content_panel" } do %>
        Cancel
      <% end %>
    </div>
  <% end %>
</div>
</turbo-frame>

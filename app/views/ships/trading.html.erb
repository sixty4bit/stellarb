<turbo-frame id="content_panel">
<%= render 'shared/breadcrumbs', breadcrumbs: @breadcrumbs %>

<div class="max-w-6xl px-4">
  <h1 class="text-2xl font-bold mb-1 text-orange-500">Trading</h1>
  <div class="text-sm text-gray-400 mb-6">Manage your automated trade routes</div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mb-6">
    <div class="bg-blue-900 border border-blue-700 p-3 sm:p-4">
      <div class="text-gray-400 text-sm">Active Ships</div>
      <div class="text-white text-2xl font-bold"><%= @ships.count %></div>
    </div>
    <div class="bg-blue-900 border border-blue-700 p-3 sm:p-4">
      <div class="text-gray-400 text-sm">Active Routes</div>
      <div class="text-white text-2xl font-bold"><%= @routes.count %></div>
    </div>
    <div class="bg-blue-900 border border-blue-700 p-3 sm:p-4">
      <div class="text-gray-400 text-sm">Est. Profit/hr</div>
      <div class="text-lime-400 text-2xl font-bold">0 cr</div>
    </div>
  </div>

  <!-- Available Trading Ships -->
  <div class="bg-blue-900 border border-blue-700 p-4 mb-6">
    <h2 class="text-lime-400 font-bold mb-4">Available Trading Ships</h2>
    <% if @ships.any? %>
      <div class="space-y-2">
        <% @ships.each do |ship| %>
          <%= link_to ship_path(ship),
              class: "block border border-blue-600 p-3 hover:border-orange-500 transition-colors",
              data: { turbo_frame: "content_panel" } do %>
            <div class="flex items-center justify-between">
              <span class="text-white"><%= ship.name %></span>
              <span class="text-gray-400"><%= ship.hull_size.humanize %></span>
            </div>
            <div class="text-sm text-gray-500 mt-1">
              Cargo: <%= ship.ship_attributes["cargo_capacity"] || 0 %> tons Â· 
              <% if ship.current_system %>
                Location: <%= ship.current_system.name %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-400">No ships available for trading.</p>
    <% end %>
  </div>

  <!-- Routes Link -->
  <div class="flex flex-col sm:flex-row gap-4">
    <%= link_to routes_path,
        class: "px-4 py-2 bg-orange-800 text-white hover:bg-orange-700 rounded transition-colors",
        data: { turbo_frame: "content_panel" } do %>
      View All Routes
    <% end %>
    <%= link_to new_route_path,
        class: "px-4 py-2 bg-blue-800 text-white hover:bg-orange-800 rounded transition-colors",
        data: { turbo_frame: "content_panel" } do %>
      Create New Route
    <% end %>
  </div>

  <div class="mt-8 text-sm text-gray-500">
    <p>Keyboard: j/k to navigate, Enter to view ship, n for new route</p>
  </div>
</div>
</turbo-frame>

<turbo-frame id="content_panel">
<div>
  <h1 class="text-2xl font-bold text-orange-500 mb-1">Profile</h1>
  <div class="text-sm text-gray-400 mb-6">Your Settings</div>

  <% if flash[:notice] %>
    <div class="notice bg-green-900 border border-green-700 text-green-300 p-4 mb-6">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="bg-blue-900 border border-blue-700 p-6 mb-6">
    <%= form_with model: @user, url: profile_path, method: :patch do |f| %>
      <div class="mb-4">
        <label class="block text-gray-400 mb-2">Name</label>
        <%= f.text_field :name, class: "w-full bg-blue-800 border border-blue-600 p-2 text-white", readonly: true %>
      </div>
    <% end %>

    <%= link_to "Edit Profile", edit_profile_path, class: "inline-block bg-orange-600 hover:bg-orange-500 px-4 py-2 mt-4" %>
  </div>
</div>
</turbo-frame>

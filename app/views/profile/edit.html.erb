<turbo-frame id="content_panel">
<div>
  <h1 class="text-2xl font-bold text-orange-500 mb-1">Edit Profile</h1>
  <div class="text-sm text-gray-400 mb-6">Update Your Settings</div>

  <% if @user.errors.any? %>
    <div class="error bg-red-900 border border-red-700 text-red-300 p-4 mb-6">
      <% @user.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="bg-blue-900 border border-blue-700 p-6 mb-6">
    <%= form_with model: @user, url: profile_path, method: :patch do |f| %>
      <div class="mb-4">
        <label class="block text-gray-400 mb-2">Name</label>
        <%= f.text_field :name, class: "w-full bg-blue-800 border border-blue-600 p-2 text-white" %>
      </div>

      <div class="flex gap-4">
        <%= f.submit "Save Changes", class: "bg-orange-600 hover:bg-orange-500 px-4 py-2 cursor-pointer" %>
        <%= link_to "Cancel", profile_path, class: "bg-gray-600 hover:bg-gray-500 px-4 py-2" %>
      </div>
    <% end %>
  </div>
</div>
</turbo-frame>

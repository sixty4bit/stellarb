<turbo-frame id="content_panel">
<div>
  <h1 class="text-2xl font-bold text-orange-500 mb-1">Edit Profile</h1>
  <div class="text-sm text-gray-400 mb-6">Update Your Settings</div>

  <% if flash[:notice] %>
    <div class="notice bg-blue-900 border border-blue-700 text-blue-300 p-4 mb-6">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if @user.errors.any? %>
    <div class="error bg-red-900 border border-red-700 text-red-300 p-4 mb-6">
      <% @user.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="bg-blue-900 border border-blue-700 p-4 sm:p-6 mb-6">
    <%= form_with model: @user, url: profile_path, method: :patch do |f| %>
      <div class="mb-4">
        <label class="block text-gray-400 mb-2">Name</label>
        <%= f.text_field :name, class: "w-full bg-blue-800 border border-blue-600 p-2 text-white" %>
      </div>

      <div class="mb-6">
        <label class="flex items-center gap-3 cursor-pointer">
          <%= f.check_box :sound_enabled, 
              class: "w-5 h-5 accent-orange-500 bg-blue-800 border border-blue-600",
              data: { action: "change->audio#syncPreference" } %>
          <span class="text-gray-300">Enable Sound Effects</span>
        </label>
        <p class="text-sm text-gray-500 mt-1 ml-8">Play audio feedback for game events</p>
      </div>

      <div class="flex flex-col sm:flex-row gap-4">
        <%= f.submit "Save Changes", class: "w-full sm:w-auto bg-orange-600 hover:bg-orange-500 px-4 py-2 cursor-pointer" %>
        <%= link_to "Cancel", profile_path, class: "w-full sm:w-auto text-center bg-gray-600 hover:bg-gray-500 px-4 py-2" %>
      </div>
    <% end %>
  </div>
</div>
</turbo-frame>

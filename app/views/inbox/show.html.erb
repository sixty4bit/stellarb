<turbo-frame id="content_panel">
<div>
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-bold text-orange-500 mb-1">Message</h1>
      <div class="text-sm text-gray-400">Inbox Detail View</div>
    </div>
    <%= link_to inbox_index_path,
        class: "text-sm text-gray-400 hover:text-orange-500 transition-colors",
        data: { turbo_frame: "content_panel" } do %>
      â† Back to Inbox
    <% end %>
  </div>

  <div class="bg-blue-900 border border-blue-700 p-6">
    <div class="border-b border-blue-700 pb-4 mb-4">
      <div class="flex items-center gap-2 mb-2">
        <span class="<%= @message.unread? ? 'text-orange-500' : 'text-gray-500' %>">
          <%= @message.unread? ? 'â—' : 'â—‹' %>
        </span>
        <h2 class="text-xl font-bold <%= @message.urgent? ? 'text-red-400' : 'text-white' %>">
          <%= @message.title %>
        </h2>
        <% if @message.urgent? %>
          <span class="text-xs bg-red-800 text-white px-2 py-0.5 rounded">[URGENT]</span>
        <% end %>
      </div>

      <div class="flex items-center justify-between text-sm text-gray-400">
        <div>
          <span class="text-gray-500">From:</span>
          <span class="text-orange-400"><%= @message.from %></span>
        </div>
        <div>
          <span class="text-gray-500">Received:</span>
          <span><%= time_ago_in_words(@message.created_at) %> ago</span>
        </div>
      </div>
    </div>

    <div class="text-gray-200 leading-relaxed whitespace-pre-wrap mb-6">
<%= @message.body %>
    </div>

    <div class="border-t border-blue-700 pt-4 flex items-center gap-4">
      <% if @message.unread? %>
        <%= button_to mark_read_inbox_path(@message),
            method: :post,
            class: "px-4 py-2 bg-blue-800 border border-blue-600 text-sm hover:border-orange-500 transition-colors",
            data: { turbo_frame: "content_panel" } do %>
          ğŸ“– Mark Read
        <% end %>
      <% else %>
        <%= button_to mark_unread_inbox_path(@message),
            method: :post,
            class: "px-4 py-2 bg-blue-800 border border-blue-600 text-sm hover:border-orange-500 transition-colors",
            data: { turbo_frame: "content_panel" } do %>
          ğŸ“© Mark Unread
        <% end %>
      <% end %>
      <%= button_to inbox_path(@message),
          method: :delete,
          class: "px-4 py-2 bg-blue-800 border border-red-800 text-sm text-red-400 hover:border-red-500 transition-colors",
          data: { turbo_frame: "content_panel", turbo_confirm: "Delete this message?" } do %>
        ğŸ—‘ï¸ Delete
      <% end %>
    </div>
  </div>

  <div class="mt-6 text-sm text-gray-500">
    <p>Keyboard: r to toggle read, d to delete, Backspace to return</p>
  </div>
</div>
</turbo-frame>

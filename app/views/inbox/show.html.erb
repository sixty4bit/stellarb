<div>
  <%= render 'shared/breadcrumbs', breadcrumbs: [
    { name: current_user.name, path: root_path },
    { name: 'Inbox', path: inbox_index_path },
    { name: @message[:title].truncate(30) }
  ] %>

  <div class="mb-6">
    <h1 class="text-2xl font-bold text-orange-500 mb-2"><%= @message[:title] %></h1>
    <div class="text-sm text-gray-400">From: <%= @message[:from] %></div>
    <div class="text-xs text-gray-500 mt-1"><%= time_ago_in_words(@message[:timestamp]) %> ago</div>
  </div>

  <div class="bg-blue-900 border border-blue-700 p-6 mb-6">
    <div class="whitespace-pre-wrap"><%= @message[:body] %></div>
  </div>

  <div class="flex gap-4">
    <%= link_to inbox_index_path,
        class: "px-4 py-2 bg-blue-800 hover:bg-blue-700 border border-blue-600 transition-colors",
        data: { turbo_frame: "content_panel" } do %>
      ‚Üê Back to Inbox
    <% end %>

    <% if @message[:can_reply] %>
      <%= link_to "#",
          class: "px-4 py-2 bg-orange-800 hover:bg-orange-700 border border-orange-600 transition-colors" do %>
        Reply
      <% end %>
    <% end %>
  </div>

  <div class="mt-8 text-sm text-gray-500">
    <p>Keyboard: Esc to go back, r to reply</p>
  </div>
</div>

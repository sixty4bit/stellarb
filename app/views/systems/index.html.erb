<turbo-frame id="content_panel">
<%= render 'shared/breadcrumbs', breadcrumbs: @breadcrumbs %>

<div class="max-w-6xl">
  <h1 class="text-2xl font-bold mb-1 text-orange-500">Systems</h1>
  <div class="text-sm text-gray-400 mb-6">Discovered star systems</div>

  <% if @systems.any? %>
    <div class="space-y-2">
      <% @systems.each do |system| %>
        <%= link_to system_path(system),
            class: "block bg-blue-900 border border-blue-700 p-4 hover:border-orange-500 transition-colors",
            data: { turbo_frame: "content_panel" } do %>
          <div class="flex items-center justify-between">
            <div>
              <span class="font-bold text-white"><%= system.name %></span>
              <span class="text-gray-500 text-sm ml-2">(<%= system.x %>, <%= system.y %>, <%= system.z %>)</span>
              <% if system.is_cradle? %>
                <span class="text-xs bg-lime-800 text-lime-200 px-2 py-0.5 ml-2 rounded">[HOME]</span>
              <% end %>
            </div>
            <div class="text-sm">
              <span class="text-gray-400">Star:</span>
              <span class="text-lime-400 ml-1"><%= system.properties&.dig('star_type')&.humanize || 'Unknown' %></span>
            </div>
          </div>
          <div class="text-sm text-gray-400 mt-2">
            <% if system.discovered_by == current_user %>
              <span class="text-orange-500">Discovered by you</span>
            <% elsif system.discovered_by %>
              Discovered by <%= system.discovered_by.name %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="bg-blue-900 border border-blue-700 p-8 text-center">
      <p class="text-gray-400">No systems discovered yet.</p>
      <p class="text-sm text-gray-500 mt-2">Visit the Navigation panel to explore nearby systems.</p>
    </div>
  <% end %>

  <div class="mt-8 text-sm text-gray-500">
    <p>Keyboard: j/k to navigate, Enter to view details</p>
  </div>
</div>
</turbo-frame>

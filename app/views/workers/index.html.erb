<turbo-frame id="content_panel">
<%= render 'shared/breadcrumbs', breadcrumbs: @breadcrumbs %>

<div class="max-w-6xl">
  <h1 class="text-2xl font-bold mb-1 text-orange-500">Workers</h1>
  <div class="text-sm text-gray-400 mb-6">Your employed NPCs</div>

  <%# Quick Actions %>
  <div class="mb-6">
    <%= link_to recruiter_workers_path,
        class: "px-4 py-2 bg-orange-800 text-white hover:bg-orange-700 rounded transition-colors",
        data: { turbo_frame: "content_panel" } do %>
      <span class="text-lime-400">r</span> Open Recruiter
    <% end %>
  </div>

  <% if @workers.any? %>
    <%# Unassigned Workers Warning %>
    <% if @unassigned_workers&.any? %>
      <div class="bg-orange-900 border border-orange-600 p-4 mb-6">
        <p class="text-orange-300">
          <span class="font-bold"><%= @unassigned_workers.count %> unassigned worker(s)</span>
          — Assign them to ships or buildings to put them to work!
        </p>
      </div>
    <% end %>

    <div class="space-y-2">
      <% @workers.each do |worker| %>
        <% hiring = worker.hirings.find { |h| h.user_id == current_user.id } %>
        <% assigned = hiring&.assignable.present? %>
        <%= link_to worker_path(worker),
            class: "block bg-blue-900 border border-blue-700 p-4 hover:border-orange-500 transition-colors",
            data: { turbo_frame: "content_panel" } do %>
          <div class="flex items-center justify-between">
            <%# Worker Name & Rarity %>
            <div>
              <span class="font-bold text-white"><%= worker.npc_class.humanize %></span>
              <span class="text-xs bg-<%= rarity_color(worker.rarity_tier) %>-800 text-white px-2 py-0.5 ml-2 rounded">
                <%= worker.rarity_tier&.upcase || 'COMMON' %>
              </span>
              <% if !assigned %>
                <span class="text-xs text-orange-400 ml-2">[UNASSIGNED]</span>
              <% else %>
                <span class="text-xs text-lime-400 ml-2">[ACTIVE]</span>
              <% end %>
            </div>

            <%# Skill Level %>
            <div class="text-sm">
              <span class="text-gray-400">Skill: </span>
              <span class="text-<%= skill_color(worker.skill) %>-400 font-bold"><%= worker.skill %></span>
            </div>
          </div>

          <%# Worker Details %>
          <div class="flex items-center justify-between text-sm text-gray-400 mt-2">
            <div>
              <span><%= worker.race.humanize %></span>
              <span class="ml-4">Wage: <span class="text-orange-400"><%= hiring&.wage || worker.calculate_wage %> cr/day</span></span>
              <% if worker.chaos_factor > 50 %>
                <span class="ml-4 text-<%= chaos_color(worker.chaos_factor) %>-400">⚠ Chaos: <%= worker.chaos_factor %></span>
              <% end %>
            </div>

            <%# Assignment Status %>
            <% if assigned %>
              <span class="text-lime-400">
                <span class="text-gray-500">→</span> <%= hiring.assignable.name rescue 'Unknown' %>
              </span>
            <% end %>
          </div>

          <%# Age/Lifespan Warning (if elderly) %>
          <% if worker.elderly? %>
            <div class="mt-2 text-xs text-<%= days_remaining_color(worker.days_remaining) %>-400">
              ⏳ <%= worker.days_remaining %> days remaining (effectiveness: <%= (worker.age_effectiveness_modifier * 100).round %>%)
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>

    <%# Summary Stats %>
    <div class="mt-6 p-4 bg-blue-900/50 border border-blue-800 rounded">
      <div class="flex justify-between text-sm">
        <span class="text-gray-400">Total Workers: <span class="text-white"><%= @workers.count %></span></span>
        <span class="text-gray-400">Assigned: <span class="text-lime-400"><%= @workers.count - (@unassigned_workers&.count || 0) %></span></span>
        <span class="text-gray-400">Total Daily Wages: <span class="text-orange-400"><%= @workers.sum { |w| w.hirings.find { |h| h.user_id == current_user.id }&.wage || w.calculate_wage } %> cr</span></span>
      </div>
    </div>
  <% else %>
    <div class="bg-blue-900 border border-blue-700 p-8 text-center">
      <p class="text-gray-400">No workers employed.</p>
      <p class="text-sm text-gray-500 mt-2">Visit the Recruiter to hire NPCs for your ships and buildings.</p>
    </div>
  <% end %>

  <div class="mt-8 text-sm text-gray-500">
    <p>Keyboard: j/k to navigate, Enter to view details, r for recruiter</p>
  </div>
</div>
</turbo-frame>
